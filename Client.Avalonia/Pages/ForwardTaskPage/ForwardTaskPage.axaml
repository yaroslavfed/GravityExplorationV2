<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:forwardTaskPage="clr-namespace:Client.Avalonia.Pages.ForwardTaskPage"
             xmlns:card="clr-namespace:Client.Avalonia.Controls.Card"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.Avalonia.Pages.ForwardTaskPage.ForwardTaskPage"
             x:DataType="forwardTaskPage:ForwardTaskPageViewModel">

    <Design.DataContext>
        <!-- ReSharper disable once Xaml.ConstructorWarning -->
        <forwardTaskPage:ForwardTaskPageViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto * Auto">
        <card:Card Grid.Row="0" Margin="8 8 8 2">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding SensorsList}" Classes="m-1">
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <card:Card Classes="m-1">
                                <Grid RowDefinitions="Auto *" Classes="m-2">
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Classes="mb-1">
                                        <TextBlock Classes="mr-1 ha-center"
                                                   Text="{Binding X, StringFormat='OX: {0}'}" />
                                        <TextBlock Classes="mx-1 ha-center"
                                                   Text="{Binding Y, StringFormat='OY: {0}'}" />
                                        <TextBlock Classes="ml-1 ha-center"
                                                   Text="{Binding Z, StringFormat='OZ: {0}'}" />
                                    </StackPanel>
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding Value, StringFormat='Показание: {0:0.####}'}">
                                        <ToolTip.Tip>
                                            <StackPanel>
                                                <TextBlock Classes="align-justify"
                                                           FontWeight="Bold"
                                                           Text="{Binding Value}" />
                                            </StackPanel>
                                        </ToolTip.Tip>
                                    </TextBlock>
                                </Grid>
                            </card:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </card:Card>
        <card:Card Grid.Row="1" Margin="8 2 8 4">
            <Viewbox>
                <Image Stretch="Uniform"
                       Source="avares://Client.Avalonia/Assets/testpng.png" />
            </Viewbox>
        </card:Card>
        <Grid Grid.Row="2" ColumnDefinitions="Auto *" Margin="10 4 10 8">
            <Button Grid.Column="0"
                    Classes="ha-stretch hca-center"
                    Padding="4"
                    Margin="0 0 2 4"
                    Command="{Binding GotoSettingsPageCommand}">
                <Button.Content>
                    <PathIcon Data="{StaticResource GoBack}" />
                </Button.Content>
            </Button>
            <Button Grid.Column="1"
                    Classes="ha-stretch hca-center"
                    Margin="2 0 0 4"
                    Content="Перейти к обратной задаче" />
        </Grid>
    </Grid>

</UserControl>